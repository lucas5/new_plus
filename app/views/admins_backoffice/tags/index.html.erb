<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Tags</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a></li>
          <li class="breadcrumb-item active">Tags</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Tags</h3>

      <div class="card-tools">
        <%= link_to t('register'), new_admins_backoffice_tag_path, class: 'btn btn-outline-success' %>
      </div>
    </div>
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <thead>
        <tr>
          <th>ID</th>
          <th><%= t('name') %></th>
          <th><%= t('language') %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.id %></td>
            <td><%= tag.name %></td>
            <td><%= tag.locale %></td>
            <td>
              <%= link_to edit_admins_backoffice_tag_path(tag.id), class: 'btn btn-outline-primary' do %>
                <i class="fas fa-edit"></i> <%= t('edit') %>
              <% end %>
              <%= link_to admins_backoffice_tag_path(tag), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-outline-danger' do %>
                <i class="fas fa-trash"></i> <%= t('delete') %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">

          <div class="card-header">
            <h3 class="card-title">Vídeo</h3>
          </div>

          <%= simple_nested_form_for([:admins_backoffice, video], url: video.new_record? ? admins_backoffice_videos_path : admins_backoffice_video_path(video)) do |f| %>
            <div class="card-body">

              <div class="form-group">
                <label>Título</label>
                <%= f.input :title, label: false,
                            input_html: { class:"form-control", placeholder:"Enter title" } %>
              </div>

              <div class="form-group">
                <label>Descrição</label>
                <%= f.input :description, label: false,
                            input_html: { class:"form-control", placeholder:"Enter description" } %>
              </div>

              <div class="form-group">
                <label>URL</label>
                <%= f.input :url, label: false,
                            input_html: { class:"form-control", placeholder:"Enter url" } %>
              </div>

              <div class="form-group">
                <label>Duração (min)</label>
                <%= f.input :duration, label: false,
                            input_html: { class:"form-control", placeholder:"Enter duration" } %>
              </div>

              <%= render 'admins_backoffice/videos/form/tags', f: f, video: video %>

            </div>

            <div class="card-footer">
              <button type="submit" class="btn btn-outline-success">Salvar</button>
            </div>


          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t('select_user') %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a></li>
          <li class="breadcrumb-item active"><%= t('select_user') %></li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= t('users').upcase %></h3>

      <div class="card-tools">
        <div class="card-tools">
          <%= link_to t('register'), new_admins_backoffice_user_path, class: 'btn btn-outline-success' %>
        </div>
      </div>
    </div>
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <thead>
        <tr>
          <th>ID</th>
          <th><%= t('name') %></th>
          <th><%= t('email') %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to admins_backoffice_get_comments_path(user.id), class: "btn btn-outline-primary" do %>
                <i class="fas fa-mouse-pointer"></i> <%= t('select') %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<div class="card">
  <div class="card-body register-card-body">
    <p class="login-box-msg"><%= t('register_message') %></p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-group mb-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: t('name') %>
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-user"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('email'),
                          input_html: {type: "email"} %>
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-envelope"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t('password'),
                             input_html: {type: "password"} %>
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",
                             placeholder: t('password_confirmation'), input_html: {type: "password"} %>
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('sign_up'), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div style="padding-top: 5px">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>